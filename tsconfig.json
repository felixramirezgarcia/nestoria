{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "importHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "downlevelIteration": true,
    "outDir": "./build",
    "rootDir": "./src",    
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src/**/*.ts"]
}